@using WebVehiculoMVC.Models


@{
    ViewBag.Title = "Listar";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Listar</title>
    <meta charset="utf-8" />
</head>
<body>
    <h1>Lista de Vehiculos</h1>

    <table border="1">
        <tr><th>ID</th><th>Nombre</th><th>Modelo</th><th>Marca</th></tr>

        @foreach (Vehiculo V in Model)
        {
            <tr><td>@V.IdV</td><td>@V.NombreV</td><td>@V.ModeloV</td><td>@V.IdM</td></tr>
        }
    </table>
    <br />
    @Html.ActionLink("Vovler", "Index");
</body>
</html>

